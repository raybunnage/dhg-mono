{
  "name": "dhg-monorepo",
  "private": true,
  "scripts": {
    "// Core Development Commands": "Essential turbo commands for development",
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "test:run": "turbo run test:run",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    
    "// Server Utilities": "Development server management",
    "servers": "echo 'Starting all development servers...' && turbo run dev --parallel",
    "browser": "cd html && node server.js",
    "research": "pnpm --filter @dhg/research dev",
    
    "// App Shortcuts": "Quick access to specific app development",
    "dev:hub": "pnpm --filter dhg-hub dev",
    "dev:audio": "pnpm --filter dhg-audio dev",
    "dev:experts": "pnpm --filter dhg-improve-experts dev",
    "dev:admin-code": "pnpm --filter dhg-admin-code dev",
    "dev:admin-suite": "pnpm --filter dhg-admin-suite dev",
    "dev:research": "pnpm --filter @dhg/research dev",
    
    "// Utility Commands": "Helpful utilities",
    "tree": "node scripts/show-tree.js",
    "types": "supabase gen types typescript --project-id jdksnfkupzywjdfefkyj > supabase/types.ts",
    
    "// Git & Promotion": "Use git-workflow-cli.sh for comprehensive git operations",
    "git": "./scripts/cli-pipeline/git_workflow/git-workflow-cli.sh"
  },
  "bin": {
    "dhg-tree": "./scripts/show-tree.js"
  },
  "devDependencies": {
    "@anthropic-ai/claude-code": "^1.0.1",
    "gray-matter": "^4.0.3",
    "netlify-cli": "18.0.4",
    "supabase": "2.12.1",
    "turbo": "^1.12.4"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.49.8",
    "axios": "^1.8.4",
    "cli-table3": "^0.6.5",
    "csv-parse": "^5.6.0",
    "dotenv": "^16.5.0",
    "extract-zip": "^2.0.1",
    "googleapis": "^148.0.0",
    "mammoth": "^1.9.0",
    "node-fetch": "^3.3.2",
    "office-text-extractor": "^3.0.3",
    "officeparser": "^5.1.1",
    "pdf-lib": "^1.17.1",
    "pdfjs-dist": "^5.1.91",
    "pptx-parser": "^1.1.7-beta.9",
    "pptx-text-parser": "^1.1.1",
    "react-json-pretty": "^2.2.0",
    "uuid": "^11.1.0",
    "which": "^5.0.0"
  }
}
