{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "outDir": "./dist",
    "rootDir": "../../../",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": false,
    "noEmit": true,
    "noImplicitAny": true,
    "types": ["node"]
  },
  "include": [
    "./*.ts",
    "./commands/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "../../../apps/**",
    "../../../supabase/functions/**"
  ]
}