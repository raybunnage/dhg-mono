{
  "name": "@shared/supabase-service-refactored",
  "version": "1.0.0",
  "description": "Refactored SupabaseService using BusinessService base class with dependency injection",
  "main": "./index.ts",
  "types": "./index.ts",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.38.0",
    "@shared/base-classes": "workspace:*"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ],
    "moduleNameMapper": {
      "^@shared/base-classes$": "<rootDir>/../base-classes",
      "^fs$": "<rootDir>/__mocks__/fs.js"
    }
  }
}